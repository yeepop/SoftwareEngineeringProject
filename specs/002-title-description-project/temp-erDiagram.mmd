    USER ||--o{ AUDITLOG : acts
    SHELTER ||--o{ ANIMAL : houses
    ANIMAL ||--o{ APPLICATION : has
    ANIMAL ||--o{ ANIMALIMAGE : images
    ANIMAL ||--o{ MEDICALRECORD : records
